{% extends 'base.html.twig' %}

{% block title %}Modification{% endblock %}
{% block monTitre %}
{% if isModification %}
    Modification {{ aliment.nom }} 
{% else %}  
    Ajout d'un Aliment
{% endif %}  
{% endblock %}
{% block body %}
    {{form_start(form)}}
    <div class="row">
        <div class="col-6">
            {% if isModification %}
            <img src="{{asset('images/aliments/' ~ aliment.image)}}" style="width: 25%;" alt="">
            {% endif %}
            <div>{{ form_row(form.imageFile)}}</div>
            <div>{{ form_row(form.nom, {"attr" : {'class' : 'text-danger'}, "label" : "Nom de l'aliment"})}}</div> {#met le nom en rouge: objet jSon et modification du nom de label#}
            <div>{{ form_row(form.type)}}</div> <!-- Met le champs TYPE sous le nom-->
        </div>
        <div class="col-6">
           {{form_widget(form)}}
        </div>
    </div>
    <input type="submit" class="btn btn-primary" value="Enregistrer">
    {{form_end(form)}}
{% endblock %}
